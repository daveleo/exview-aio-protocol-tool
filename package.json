{
  "name": "exview-aio-protocol-tool",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "certify": "npm run certify --prefix apps/cli --",
    "dev": "concurrently \"npm run dev --workspace=@exview/api\" \"npm run dev --workspace=@exview/webui\"",
    "build": "npm run build --workspace=@exview/webui",
    "start": "npm run start --workspace=@exview/api",
    "suite": "npm run certify -- --suite --rate 5 --timeout 1200 --settle-set 300 --settle-mode 900",
    "golden": "powershell -ExecutionPolicy Bypass -File scripts/check-golden-summary.ps1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
